# Uncomment the next line to define a global platform for your project
platform :ios, '10.0'

def shared_config
  use_frameworks!
  pod 'SnapKit'
  pod 'RxSwift'
  pod 'RxCocoa'
  pod 'RxGesture'
  pod 'SwiftLint'
end

target 'NumberInputField' do
  shared_config
end

target 'LocalizedNumberInputField' do
  shared_config
end

target 'TextAttachmentLab' do
  shared_config
  pod 'Kingfisher', '~> 5.0'
end

target 'TextFlow' do
  shared_config
end

target 'LabelCollection' do
  shared_config
end

target 'NestedStack' do
  shared_config
end

target 'Showcase' do
  shared_config
end
